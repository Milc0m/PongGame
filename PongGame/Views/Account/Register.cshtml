@model PongGame.ViewModels.RegisterViewModel


<div class="register-form">
    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <h2 class="text-center">Sign Up</h2>
        <div class="form-group">
            <input class="form-control" placeholder="Email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <input class="form-control" placeholder="Name" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <input class="form-control" placeholder="Password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input class="form-control" placeholder="Password Confirm" asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-danger btn-primary btn-block">Sign Up</button>
        </div>
    </form>
</div>
 