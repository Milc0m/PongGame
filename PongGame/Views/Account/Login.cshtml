@model PongGame.ViewModels.LoginViewModel




<div class="login-form">
    <form method="post" asp-controller="Account" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <h2 class="text-center">Log In</h2>
        <div class="form-group">
            <input class="form-control" placeholder="Email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <input class="form-control" placeholder="Password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-primary btn-block">Log In</button>
        </div>
        <div>
            <label class="pull-left checkbox-inline" asp-for="RememberMe"><input type="checkbox"> Remember me</label>
        </div>
    </form>
    <p class="text-center"><a asp-controller="Account" asp-action="Register">Create an Account</a></p>
</div>